{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "preserve",
    "emitDeclarationOnly": true,
    "declaration": true,
    "pretty": true,
    "outDir": "built"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "demo/built", "built"]
}
